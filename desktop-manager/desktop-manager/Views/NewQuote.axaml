<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:desktop_manager.ViewModels"
             xmlns:utility="clr-namespace:desktop_manager.Utility"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="desktop_manager.Views.NewQuote"
             x:DataType="vm:NewQuoteViewModel">
    
    <ScrollViewer>
        
        <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="*">
            
            <Grid Grid.Row="1" RowDefinitions="Auto, *, *" ColumnDefinitions="*, *, *, *" Margin="10, 10">
                
                <Grid.Styles>
                    <Style Selector="Label">
                        <Setter Property="Foreground" Value="#181818"></Setter>
                        <Setter Property="FontSize" Value="12"></Setter>
                    </Style>
                    <Style Selector="CheckBox:unchecked /template/ Border#NormalRectangle">
                        <Setter Property="BorderThickness" Value="1"></Setter>
                        <Setter Property="BorderBrush" Value="#181818"/>
                        <Setter Property="Background" Value="#F6F6F6"></Setter>
                    </Style>
                    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
                        <Setter Property="BorderThickness" Value="1"></Setter>
                        <Setter Property="BorderBrush" Value="#181818"/>
                        <Setter Property="Background" Value="#B00"></Setter>
                    </Style>
                    <Style Selector="CheckBox /template/ ContentPresenter">
                        <Setter Property="Foreground" Value="#181818"></Setter>
                    </Style>
                    <Style Selector="CheckBox:pointerover /template/ ContentPresenter">
                        <Setter Property="Foreground" Value="#181818"></Setter>
                    </Style>
                    <Style Selector="TextBox">
                        <Setter Property="Background" Value="#E6E6E6"></Setter>
                        <Setter Property="Foreground" Value="#181818"></Setter>
                        <Setter Property="CaretBrush" Value="#181818"></Setter>
                    </Style>
                    <Style Selector="TextBox:pointerover">
                        <Setter Property="Foreground" Value="#181818"></Setter>
                    </Style>
                    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                        <Setter Property="Background" Value="#D6D6D6"></Setter>
                    </Style>
                    <Style Selector="TextBox:pointerover /template/ TextBlock#PART_Watermark">
                        <Setter Property="Foreground" Value="#181818" />
                    </Style>
                    <Style Selector="TextBox:focus">
                        <Setter Property="Foreground" Value="#181818"></Setter>
                    </Style>
                    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                        <Setter Property="Background" Value="#D6D6D6"></Setter>
                        <Setter Property="BorderBrush" Value="#B00"></Setter>
                    </Style>
                    <Style Selector="TextBox:focus /template/ TextBlock#PART_Watermark">
                        <Setter Property="Foreground" Value="#181818" />
                    </Style>
                </Grid.Styles>
            
                <Label Grid.Row="0" Grid.Column="0" Margin="0, 0, 5, 0" FontWeight="Bold">Cliente</Label>
            
                <Grid RowDefinitions="Auto, Auto" Grid.Row="1" Grid.Column="0" Margin="0, 0, 5, 0">
                    <Label Foreground="#181818" Grid.Row="0">Nome</Label>
                    <TextBox Grid.Row="1"></TextBox>
                </Grid>
            
                <Grid RowDefinitions="Auto, Auto" Grid.Row="2" Grid.Column="0" Margin="0, 0, 5, 0">
                    <Label Foreground="#181818" Grid.Row="0">Morada</Label>
                    <TextBox Grid.Row="1"></TextBox>
                </Grid>
            
                <Label Grid.Row="0" Grid.Column="1" Margin="5, 0, 0, 0" FontWeight="Bold">Documento</Label>
            
                <Grid RowDefinitions="Auto, Auto" Grid.Row="1" Grid.Column="1" Margin="5, 0, 0, 0">
                    <Label Foreground="#181818" Grid.Row="0">Assunto</Label>
                    <TextBox Grid.Row="1"></TextBox>
                </Grid>
            
                <StackPanel VerticalAlignment="Bottom" Spacing="5" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="5, 0, 0, 0" Orientation="Horizontal">
                    <CheckBox>Opções</CheckBox>
                    <CheckBox>Autos</CheckBox>
                    <CheckBox>Condomínio</CheckBox>
                    <CheckBox>IVA</CheckBox>
                </StackPanel>
            
            </Grid>
            
            <DataGrid Grid.Row="2" Margin="5, 5" ItemsSource="{Binding Items}" AutoGenerateColumns="False" CanUserSortColumns="False" CellEditEnded="SortItems">
                
                <DataGrid.Resources>
                    <utility:CurrencyConverter x:Key="CurrencyConverter"/>
                    <utility:QuantityConverter x:Key="QuantityConverter" />
                </DataGrid.Resources>
                
                <DataGrid.Styles>
                    <!-- Style for the DataGrid -->
                    <Style Selector="DataGrid">
                        <Setter Property="Background" Value="#E6E6E6"/>
                        <Setter Property="Foreground" Value="#181818"/>
                        <Setter Property="FontSize" Value="14"></Setter>
                    </Style>

                    <!-- Style for the DataGrid Headers -->
                    <Style Selector="DataGridColumnHeader">
                        <Setter Property="Background" Value="#C6C6C6"/>
                        <Setter Property="Foreground" Value="#181818"/>
                        <Setter Property="FontSize" Value="14"></Setter>
                        <Setter Property="AreSeparatorsVisible" Value="False"></Setter>
                        <Setter Property="TextBlock.TextTrimming" Value="None"/>
                    </Style>
                    
                    <Style Selector="DataGridColumnHeader:pointerover /template/ Grid#PART_ColumnHeaderRoot">
                        <Setter Property="Background" Value="#C6C6C6"/>
                    </Style>
                    
                    <Style Selector="DataGridColumnHeader:pressed /template/ Grid#PART_ColumnHeaderRoot">
                        <Setter Property="Background" Value="#C6C6C6"/>
                    </Style>

                    <!-- Style for the hovered row -->
                    <Style Selector="DataGridRow:pointerover">
                        <Setter Property="Background" Value="#D6D6D6"/>
                        <Setter Property="Foreground" Value="#181818"/>
                        <Setter Property="FontSize" Value="14"></Setter>
                    </Style>

                    <!-- Style for the DataGridRow -->
                    <Style Selector="DataGridRow">
                        <Setter Property="Background" Value="#E6E6E6"/>
                        <Setter Property="Foreground" Value="#181818"/>
                        <Setter Property="FontSize" Value="14"></Setter>
                        <Setter Property="TextBlock.TextAlignment" Value="Right"></Setter>
                    </Style>
                    
                    <Style Selector="DataGridRow:selected">
                        <Setter Property="Foreground" Value="#E6E6E6"></Setter>
                    </Style>
                    
                    <Style Selector="DataGridCell:current /template/ Rectangle#CurrencyVisual">
                        <Setter Property="IsVisible" Value="False" />
                    </Style>
                    
                    <Style Selector="DataGridCell:focus /template/ Grid#FocusVisual">
                        <Setter Property="IsVisible" Value="False" />
                    </Style>
                    
                    <Style Selector="DataGridCell.text">
                        <Setter Property="TextBlock.TextAlignment" Value="Left"></Setter>
                    </Style>
                    
                    <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
                        <Setter Property="Fill" Value="#B00"></Setter>
                    </Style>
                    
                    <!-- Styles for editable cells (textboxes) -->
                    <Style Selector="TextBox">
                        <Setter Property="Background" Value="#E6E6E6"></Setter>
                        <Setter Property="Foreground" Value="#181818"></Setter>
                        <Setter Property="CaretBrush" Value="#181818"></Setter>
                        <Setter Property="SelectionBrush" Value="#B00"></Setter>
                        <Setter Property="SelectionForegroundBrush" Value="#E6E6E6"></Setter>
                    </Style>
                    <Style Selector="TextBox:pointerover">
                        <Setter Property="Foreground" Value="#181818"></Setter>
                    </Style>
                    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                        <Setter Property="Background" Value="#D6D6D6"></Setter>
                    </Style>
                    <Style Selector="TextBox:pointerover /template/ TextBlock#PART_Watermark">
                        <Setter Property="Foreground" Value="#181818" />
                    </Style>
                    <Style Selector="TextBox:focus">
                        <Setter Property="Foreground" Value="#181818"></Setter>
                    </Style>
                    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                        <Setter Property="Background" Value="#D6D6D6"></Setter>
                        <Setter Property="BorderBrush" Value="#B00"></Setter>
                    </Style>
                    <Style Selector="TextBox:focus /template/ TextBlock#PART_Watermark">
                        <Setter Property="Foreground" Value="#181818" />
                    </Style>
                </DataGrid.Styles>
                
                <DataGrid.Columns>
                
                    <!-- ID Column -->
                    <DataGridTextColumn Header="#" Binding="{Binding Id}" CellStyleClasses="text" />

                    <!-- Description Column -->
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="7*" CellStyleClasses="text" />

                    <!-- Quantity Column -->
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity, Converter={StaticResource QuantityConverter}}" CellStyleClasses="text" />

                    <!-- Unit Price Column -->
                    <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, Converter={StaticResource CurrencyConverter}}" />

                    <!-- Profit Column (Read-Only) -->
                    <DataGridTextColumn Header="Profit" Binding="{Binding Profit, Converter={StaticResource CurrencyConverter}}" IsReadOnly="True" />
                    
                    <!-- Partnership Column (Read-Only) -->
                    <DataGridTextColumn Header="Partnership" Binding="{Binding Partnership, Converter={StaticResource CurrencyConverter}}" IsReadOnly="True" />
                    
                    <!-- Total Column (Read-Only) -->
                    <DataGridTextColumn Header="Total" Binding="{Binding Total, Converter={StaticResource CurrencyConverter}}" IsReadOnly="True" />
                
                </DataGrid.Columns>
                
            </DataGrid>
            
            <Button Grid.Row="3" Background="Red" Content="Generate" Command="{Binding GenerateQuotePdf}"></Button>
        </Grid>
        
    </ScrollViewer>
    
</UserControl>
